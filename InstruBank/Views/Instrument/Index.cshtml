@model IEnumerable<InstruBank.Models.Instrument>



<table>
    <tr>
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
        <th>@Html.DisplayNameFor(model => model.Tipo)</th>
        <th>@Html.DisplayNameFor(model => model.Marca)</th>
        <th>@Html.DisplayNameFor(model => model.Precio)</th>
        <th>@Html.DisplayNameFor(model => model.Stock)</th>
        <th>
            @Html.ActionLink("Nuevo Instrumento", "Create", "Instrument")
        </th>
        <th>
            @Html.ActionLink("Buscar por Nombre", "FindByName")
        </th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
            <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
            <td>@Html.DisplayFor(modelItem => item.Marca)</td>
            <td>@Html.DisplayFor(modelItem => item.Precio)</td>
            <td>@Html.DisplayFor(modelItem => item.Stock)</td>


            <td>@Html.ActionLink("Eliminar", "Delete", new { id = item.Id })</td>
            <td>@Html.ActionLink("Editar", "Edit", new { id = item.Id })</td>

        </tr>

    }


</table>